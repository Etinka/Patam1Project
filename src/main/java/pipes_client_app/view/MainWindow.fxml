<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import pipes_client_app.view.PipesGrid?>


<BorderPane prefHeight="342.0" prefWidth="352.0" xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="pipes_client_app.view.MainWindowController">
    <top>
        <MenuBar BorderPane.alignment="CENTER">
            <menus>
                <Menu mnemonicParsing="false" text="File">
                    <items>
                        <MenuItem mnemonicParsing="false" onAction="#openFile" text="Open" />
                        <MenuItem mnemonicParsing="false" text="Close" />
                    </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Edit">
                    <items>
                        <MenuItem mnemonicParsing="false" onAction="#serverConfig" text="Server" />
                        <MenuItem mnemonicParsing="false" onAction="#themeConfig" text="Theme" />
                    </items>
                </Menu>
            </menus>
        </MenuBar>
    </top>
    <left>
        <VBox BorderPane.alignment="CENTER">
            <children>
                <Button fx:id="startButton" focusTraversable="false" mnemonicParsing="false" onAction="#start" prefHeight="27.0" prefWidth="60.0" text="Start">
                    <VBox.margin>
                        <Insets bottom="10.0" />
                    </VBox.margin>
                </Button>
                <Button fx:id="stopButton" disable="true" focusTraversable="false" mnemonicParsing="false" onAction="#stop" prefHeight="27.0" prefWidth="60.0" text="Stop">
                    <VBox.margin>
                        <Insets bottom="10.0" />
                    </VBox.margin>
                </Button>
                <Button fx:id="solveButton" disable="true" focusTraversable="false" mnemonicParsing="false" onAction="#solve" prefHeight="27.0" prefWidth="60.0" text="Solve" />
            </children>
            <opaqueInsets>
                <Insets />
            </opaqueInsets>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
        </VBox>
    </left>
    <bottom>
        <VBox BorderPane.alignment="CENTER">
            <VBox.margin>
                <Insets right="40.0" />

            </VBox.margin>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
            </padding>
            <children>
                <HBox BorderPane.alignment="CENTER">
                    <children>
                        <Label fx:id="stepsLabel" text="Steps taken: 0">
                            <opaqueInsets>
                                <Insets right="40.0" />
                            </opaqueInsets>
                     <HBox.margin>
                        <Insets right="30.0" />
                     </HBox.margin>

                        </Label>
                        <Label fx:id="timeLabel" text="Seconds passed: 0">
                            <opaqueInsets>
                                <Insets left="30.0" />
                            </opaqueInsets>
                            <HBox.margin>
                                <Insets right="40.0" />
                            </HBox.margin>
                        </Label>
                    </children>
                </HBox>
                <Label fx:id="serverLabel" text="Server Status: Disconnected">
                    <opaqueInsets>
                        <Insets left="30.0" right="30.0" />
                    </opaqueInsets>
                </Label>
            </children>
        </VBox>

    </bottom>
    <center>
     <PipesGrid fx:id="pipesGrid" anglePipeImage="./resources/TubeCorner-R01.png"
        regularPipeImage="./resources/Tube-R01.png" height="500.0" width="500.0"
        BorderPane.alignment="CENTER"/>
    </center>
</BorderPane>
